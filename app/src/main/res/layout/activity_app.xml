<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@drawable/shape_app_image"
        />




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:text="Snapchap"
            />

        <TextView
            android:id="@+id/app_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(c) Dragon Ball Z"
            />

        <Button
            android:id="@+id/btn_href"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/blue_gray"
            android:text="@string/button.app.install"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/app_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textSize="16dp"
                android:text="Esta app es geniaaaaal!"/>

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="20dp"
                android:text="@string/button.app.back"
                style="@style/MyCategoryButton"/>
        </LinearLayout>

    </ScrollView>
</FrameLayout>