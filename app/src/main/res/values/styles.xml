<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_gray</item>
        <item name="colorPrimaryDark">@color/blue_gray_dark</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/drawable_splash</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyCategoryButton">
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/selector_category_button</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>
